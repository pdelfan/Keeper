<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/searchedImage"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/searchedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/searchedImage"
            android:padding="3dp"
            android:text="Book Title"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/searchedAuthors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchedTitle"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/searchedImage"
            android:padding="3dp"
            android:text="Publisher"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/searchedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchedAuthors"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/searchedImage"
            android:padding="3dp"
            android:text="Page count"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchedDate"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/searchedImage"
            android:padding="3dp"
            android:text="date"
            android:textSize="11sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
